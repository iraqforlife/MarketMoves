@using System.Net
@model MarketMoves.Models.Alert
@{
    ViewData["Title"] = "Alert";
}
<div class="container">
    <h1 class="text-center">@Model.Title</h1>
    <div style="padding-bottom:20px">
        <h2 class="text-center">Charts</h2>
        <div style="padding-top:30px">
            <h4 class="text-center">@Model.Image1Description</h4>
            <img src="@Model.Image1Link" alt="@Model.Image1Description" style="width:100%; height:auto" />
        </div>
        @if (!String.IsNullOrEmpty(Model.Image2Link))
        {
            <div>
                <h4 class="text-center">@Model.Image2Description</h4>
                <img src="@Model.Image2Link" alt="@Model.Image2Description" style="width:100%; height:auto" />
            </div>
        }
    </div>

    <div style="padding-top:30px">
        <h2 class="text-center" style="padding-bottom:20px">Trade Overview</h2>
        <h5>
            <strong>Option:</strong> @Model.Option
            <br />
            <strong>Type:</strong> @Model.OptionType
            <br />
            <strong>Strike price:</strong> @Model.Strike $
            <br />
            <strong>ENTRY POINT:</strong> @Model.Entry $
            <br />
            <strong style="color:green;">PROFIT ZONE:</strong> @Model.ProfitPrice $
            <br />
            <strong style="color:green;">TARGET PROFIT:</strong>  @Model.ProfitTarget %
            <br />
            <strong style="color:red">STOP LOSS:</strong> @Model.LossPrice $
            <br />
            <strong style="color:red">POSSIBLE LOSS:</strong> @Model.LossTarget %
            <br />
            <strong>RISK TO REWARD RATIO:</strong> @Model.RiskReward
        </h5>
    </div>

    <div style="padding-top:30px">
        <h2 class="text-center" style="padding-bottom:20px">Description</h2>
        <p style="font-size:1.5rem;">
            @Html.Raw(WebUtility.HtmlDecode(Model.Description))
        </p>
    </div>
    <div style="padding-top:30px">
        <h2 class="text-center" style="padding-bottom:20px">Discloser</h2>
        <h3 style="color:gray;">
            PLEASE REMEMBER THIS IS NOT FINANCIAL ADVICE PLEASE
            TRADE AT YOUR OWN RISK. THIS IS JUST INFORMATION FOR YOU
            TO USE AT YOUR DISCRETION. I AM NOT LIABLE FOR ANY LOSSES
            THAT RESULT FROM YOU TRADING.
        </h3>
    </div>
</div>